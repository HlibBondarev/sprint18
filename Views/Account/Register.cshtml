@model TaskAuthenticationAuthorization.ViewModels.RegisterModel

<h2>Register a new user</h2>

<form asp-action="Register" asp-anti-forgery="true">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div>
		<div>
			<label asp-for="Email" class="control-label">Email</label><br />
			<input asp-for="Email" class="form-control" /><br />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Password" class="control-label">Password</label><br />
			<input asp-for="Password" class="form-control" /><br />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="ConfirmPassword" class="control-label">Repeat password</label><br />
			<input asp-for="ConfirmPassword" class="form-control" /><br />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span><br />
		</div>
		<div class="form-group">
			<input type="submit" value="Registration" class="btn btn-primary" />
		</div>
	</div>
</form>